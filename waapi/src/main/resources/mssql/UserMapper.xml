<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="waapi.mapper.UserMapper">

    <!-- 사용자 조회 (MSSQL) -->
    <select id="findByUsername" parameterType="string" resultType="waapi.model.User">
        SELECT
            id,
            username,
            password
        FROM dbo.users
        WHERE username = #{username}
    </select>

</mapper>
